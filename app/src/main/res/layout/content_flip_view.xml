<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sid.demoapp.FlipViewActivity"
    tools:showIn="@layout/activity_flip_view">

    <com.sid.demoapp.views.FlipView
        android:id="@+id/flip_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:top_view_drawable="@drawable/flower_red"
        app:back_view_drawable="@drawable/flower_blossom">

        <Button
            android:id="@+id/action_flip"
            android:text="Flip View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"/>
    </com.sid.demoapp.views.FlipView>

</android.support.constraint.ConstraintLayout>
