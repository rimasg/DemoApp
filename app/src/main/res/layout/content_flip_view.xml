<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sid.demoapp.FlipViewActivity"
    tools:showIn="@layout/activity_flip_view">

    <com.sid.demoapp.views.FlipView
        android:id="@+id/flip_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:back_view_drawable="@drawable/flower_blossom"
        app:top_view_drawable="@drawable/flower_red">

        <Button
            android:id="@+id/action_flip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:text="Flip View"/>
    </com.sid.demoapp.views.FlipView>

</androidx.constraintlayout.widget.ConstraintLayout>
